<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="dataList"
            type="String" />

        <variable
            name="onClick"
            type="com.example.plateform.core.interfaces.CustomerActivityInterface" />
    </data>

    <LinearLayout
        android:id="@+id/bagsMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/subCommentorProfileImage"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile_image_other" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="vertical">

                    <com.example.plateform.utils.CustomTextView
                        android:id="@+id/subCommentorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/dash"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_14ssp"
                        app:font_name="objectiveRegular" />

                </LinearLayout>


                <com.example.plateform.utils.CustomTextView
                    android:id="@+id/subCommentorTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:includeFontPadding="false"
                    android:text="@string/dash"
                    android:textColor="@color/p_purple"
                    android:layout_weight="1"
                    android:textSize="@dimen/_10ssp"
                    app:font_name="objectiveRegular" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/three_dots" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="vertical">

            <com.example.plateform.utils.CustomTextView
                android:id="@+id/subCommentorComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:includeFontPadding="false"
                android:text="@string/dash"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_10ssp"
                app:font_name="objectiveRegular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/heart" />

                <com.example.plateform.utils.CustomTextView
                    android:id="@+id/subCommentorLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:includeFontPadding="false"
                    android:text="@string/dash"
                    android:textColor="@color/p_purple"
                    android:textSize="@dimen/_10ssp"
                    app:font_name="objectiveRegular" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>